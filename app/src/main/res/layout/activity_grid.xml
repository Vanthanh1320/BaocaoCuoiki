<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GridActivity"
    android:orientation="vertical"
   android:background="#e4e5e9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginBottom="5dp"
        android:id="@+id/header">
        <ImageButton
            android:id="@+id/imb_back"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_arrow_back_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textColor="#000"
            android:textSize="20dp"
            android:id="@+id/tv_tentieude"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scoll"
        android:layout_width="match_parent"
        android:layout_height="4000dp"
       android:layout_below="@id/header">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="4000dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:background="@color/white">

        <ImageView
            android:id="@+id/anh"
            android:layout_gravity="center"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/men2"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/imabt_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/color"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/imabt_1"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:padding="5dp"
                android:textSize="14dp"
                android:text="2 Colors"
                android:textColor="#171717"/>

            <ImageButton
                android:id="@+id/imabt_2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="115dp"
                android:background="@drawable/seller"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imabt_2"
                android:layout_marginLeft="115dp"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="14dp"
                android:text="1 Seller"
                android:textColor="#171717"/>

            <ImageButton
                android:id="@+id/imabt_3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="210dp"
                android:background="@drawable/share1"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imabt_3"
                android:layout_marginLeft="210dp"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="14dp"
                android:text="Share"
                android:textColor="#171717"/>

            <ImageButton
                android:id="@+id/imabt_4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="305dp"
                android:background="@drawable/size"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imabt_3"
                android:layout_marginLeft="305dp"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="14dp"
                android:text="Size Chart"
                android:textColor="#171717"/>

        </RelativeLayout>


        <TextView
                android:id="@+id/tengiay"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Ten"
                android:textColor="#171717"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18dp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/giagiay"
                android:text="gia"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#457ad6"
                android:layout_marginTop="12dp"
                android:textSize="18dp" />

        <ImageButton
            android:id="@+id/imabt_anhnho"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/men2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="6"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="7"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="8"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="9"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"/>

        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESCRIPTION"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textColor="#171717"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Material Type: Synthetic"
                android:textSize="16dp"
                android:textColor="#171717"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lifestyle: Casual"
                android:textSize="16dp"
                android:textColor="#171717"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Closure Type: Lauce-Up"
                android:textSize="16dp"
                android:textColor="#171717"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warranty Type: Manufacturer"
                android:textSize="16dp"
                android:textColor="#171717"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DELIVERY OPTIONS"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:textColor="#171717"
                        android:layout_gravity="center"/>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <EditText
                           android:layout_width="240dp"
                           android:layout_height="40dp"
                           android:layout_marginLeft="10dp"
                           android:layout_marginTop="5dp"
                           android:drawablePadding="20dp"
                           android:hint="Enter your pincode."
                           android:paddingLeft="15dp"
                           android:paddingRight="15dp"
                           android:textColor="@color/white"
                           android:textColorHint="#6A6363"
                           android:background="@drawable/et_bgtt"
                           android:textSize="15dp"
                           android:layout_marginBottom="10dp"/>

                       <Button
                           android:layout_width="130dp"
                           android:layout_height="40dp"
                           android:background="#457ad6"
                           android:text="Apply"
                           android:layout_marginLeft="20dp"
                           android:textColor="#fff"
                           android:textSize="18dp"
                           android:layout_gravity="center"/>

                   </LinearLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/delivery"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:orientation="vertical"
                    android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELLERS"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textColor="#171717"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ksons "
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#171717"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selling Price: "
                android:textSize="16dp"
                android:textColor="#171717"
                android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tv_seller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="gia "
                    android:textSize="16dp"
                    android:textColor="#171717"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buy from this seller "
                    android:textSize="16dp"
                    android:textColor="#457ad6"
                    android:layout_marginLeft="80dp"/>
            </LinearLayout>

        </LinearLayout>


        </LinearLayout>
    </ScrollView>

