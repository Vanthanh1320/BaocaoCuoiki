<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e4e5e9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/header"
        android:background="#fff"
        android:paddingBottom="5dp">

        <EditText
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:drawablePadding="10dp"
            android:hint="Search"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:paddingRight="15dp"
            android:textColor="@color/white"
            android:textColorHint="#6A6363"
            android:background="@drawable/et_bgtt"
            android:textSize="18dp"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="6000dp"
        android:layout_below="@+id/header">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="3500dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#171717"
                android:textSize="18dp"
                android:background="@color/white"/>

            <RelativeLayout
                android:layout_width="410dp"
                android:layout_height="wrap_content"
                android:background="@color/white">

            <ImageButton
                android:id="@+id/imabt_1"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/men"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                 android:layout_below="@id/imabt_1"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:textSize="16dp"
                android:text="Men"
                android:textColor="#171717"/>

            <ImageButton
                android:id="@+id/imabt_2"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginLeft="145dp"
                android:background="@drawable/women"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imabt_2"
                android:layout_marginLeft="145dp"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="16dp"
                android:text="Women"
                android:textColor="#171717"/>

            <ImageButton
                android:id="@+id/imabt_3"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginLeft="280dp"
                android:background="@drawable/boy"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imabt_3"
                android:layout_marginLeft="280dp"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="16dp"
                android:text="Boys"
                android:textColor="#171717"/>

                <ImageButton
                    android:id="@+id/imabt_4"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="170dp"
                    android:background="@drawable/girl"/>

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imabt_4"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:text="Girls"
                    android:textColor="#171717" />

                <ImageButton
                    android:id="@+id/imabt_5"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginLeft="145dp"
                    android:background="@drawable/ass"
                    android:layout_marginTop="170dp" />

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imabt_5"
                    android:layout_marginLeft="145dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:textColor="#171717"
                    android:text="Accessories" />

                <ImageButton
                    android:id="@+id/imabt_6"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginLeft="280dp"
                    android:layout_marginTop="170dp"
                    android:background="@drawable/bags"/>

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imabt_5"
                    android:layout_marginLeft="280dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="#171717"
                    android:text="Bags" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brands"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#171717"
                android:background="@color/white"
                android:textSize="18dp"/>

            <GridView
                android:id="@+id/gv_brand"
                android:layout_width="400dp"
                android:layout_height="800dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:background="#fff"
                android:numColumns="3"
                />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>