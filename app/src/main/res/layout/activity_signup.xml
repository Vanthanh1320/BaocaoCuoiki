<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.Signup"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/nen">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="26dp"
            android:textColor="#ffffff"
            android:text="Welcome to GTrendz.Online !"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="38dp"
            android:text="Footwear exclusive app !"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:text="---- Hello new user ----"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/edt_user_signup"
            android:layout_marginLeft="20dp"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:hint="UseName"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColorHint="@color/white"
            android:textSize="15dp"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/edt_pass_signup"
            android:layout_marginLeft="20dp"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:hint="Password"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:inputType="numberPassword"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:drawableEnd="@drawable/ic_baseline_visibility_off_24"/>

        <EditText
            android:id="@+id/edt_repass_signup"
            android:layout_marginLeft="20dp"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:drawableEnd="@drawable/ic_baseline_visibility_off_24"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColorHint="@color/white"
            android:inputType="numberPassword"
            android:hint="Re enter Password"
            android:textColor="@color/white"
            android:textSize="15dp"
            />

        <EditText
            android:id="@+id/edt_email_signup"
            android:layout_marginLeft="20dp"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColorHint="@color/white"
            android:hint="Email"
            android:textColor="@color/white"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:textSize="15dp"
            />

            <Button
                android:id="@+id/btn_lg"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:text="Sign Up"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:background="#fff"
                android:textColor="#171717"
                android:fontFamily="sans-serif-black"
                />

    </LinearLayout>

</LinearLayout>